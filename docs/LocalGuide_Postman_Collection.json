{
  "info": {
    "name": "Local Guide API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/refresh-token"
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Admin",
          "item": [
            {
              "name": "Get All Users",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/users"
              }
            },
            {
              "name": "Block User",
              "request": {
                "method": "PATCH",
                "url": "{{base_url}}/users/:id/block"
              }
            },
            {
              "name": "Unblock User",
              "request": {
                "method": "PATCH",
                "url": "{{base_url}}/users/:id/unblock"
              }
            }
          ]
        },
        {
          "name": "Tourist",
          "item": [
            {
              "name": "Get My Profile",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/users/me"
              }
            },
            {
              "name": "Update Profile",
              "request": {
                "method": "PATCH",
                "url": "{{base_url}}/users/:id"
              }
            }
          ]
        },
        {
          "name": "Guide",
          "item": [
            {
              "name": "Get My Profile",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/users/me"
              }
            },
            {
              "name": "Update Profile",
              "request": {
                "method": "PATCH",
                "url": "{{base_url}}/users/:id"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Tour",
      "item": [
        {
          "name": "Guide",
          "item": [
            {
              "name": "Create Tour",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/tours"
              }
            },
            {
              "name": "Update Tour",
              "request": {
                "method": "PATCH",
                "url": "{{base_url}}/tours/:id"
              }
            },
            {
              "name": "Delete Tour",
              "request": {
                "method": "DELETE",
                "url": "{{base_url}}/tours/:id"
              }
            }
          ]
        },
        {
          "name": "Public",
          "item": [
            {
              "name": "Get All Tours",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/tours"
              }
            },
            {
              "name": "Get Tour By Id",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/tours/:id"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Booking",
      "item": [
        {
          "name": "Tourist",
          "item": [
            {
              "name": "Create Booking",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/bookings"
              }
            },
            {
              "name": "Get My Bookings",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/bookings"
              }
            }
          ]
        },
        {
          "name": "Guide",
          "item": [
            {
              "name": "Update Booking Status",
              "request": {
                "method": "PATCH",
                "url": "{{base_url}}/bookings/:id"
              }
            },
            {
              "name": "Get My Bookings",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/bookings"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Review",
      "item": [
        {
          "name": "Tourist",
          "item": [
            {
              "name": "Create Review",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/reviews"
              }
            }
          ]
        },
        {
          "name": "Public",
          "item": [
            {
              "name": "Get Reviews",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/reviews"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Wishlist",
      "item": [
        {
          "name": "Tourist",
          "item": [
            {
              "name": "Add to Wishlist",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/wishlist"
              }
            },
            {
              "name": "Get My Wishlist",
              "request": {
                "method": "GET",
                "url": "{{base_url}}/wishlist/my"
              }
            },
            {
              "name": "Remove from Wishlist",
              "request": {
                "method": "DELETE",
                "url": "{{base_url}}/wishlist/:tourId"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "Tourist",
          "item": [
            {
              "name": "Init Payment",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/payments/booking/:bookingId"
              }
            }
          ]
        },
        {
          "name": "Gateway Callbacks",
          "item": [
            {
              "name": "Payment Success",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/payments/sslcommerz/success"
              }
            },
            {
              "name": "Payment Fail",
              "request": {
                "method": "POST",
                "url": "{{base_url}}/payments/sslcommerz/fail"
              }
            }
          ]
        }
      ]
    }
  ]
}